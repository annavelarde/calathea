<form action="/profile/update-password" method="POST">
  <label>Old Password
    <input type="password" name="oldPassword" />
  </label>
  <br />
  <label>New Password
    <input type="password" name="newPassword" />
  </label>
  <br />
  <button type="submit">Change Password</button>
</form>

{{#if errorMessage}}
  <p style="color:red">{{errorMessage}}</p>
{{/if}}