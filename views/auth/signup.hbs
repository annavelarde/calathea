<main class="container-signUp">
	<form class="form-signup" method="POST" action="/auth/signup">
		<div class="text-center mb-4">
			<img
				class="iconForm mb-4"
				src="http://cdn.onlinewebfonts.com/svg/img_215059.png"
				alt=""
				width="72"
				height="72"
			/>
			<h1 class="h3 mb-3 fw-normal">Please sign up</h1>
		</div>

		<div class="form-floating">
			<input
				name="username"
				type="name"
				id="inputName"
				class="form-control"
				placeholder="User Name"
				value="{{username}}"
				required=""
				autofocus=""
			/>
			{{! <label class="labelForm" for="inputName">User Name</label> }}
		</div>

		<div class="form-floating">
			<input
				name="email"
				type="email"
				id="inputEmail"
				class="form-control"
				placeholder="name@example.com"
				value="{{email}}"
				required=""
				autofocus=""
			/>
			{{! <label for="inputEmail">Email address</label> }}
		</div>

		<div class="form-floating">
			<input
				name="password"
				type="password"
				id="inputPassword"
				class="form-control"
				placeholder="Password (min. 8 characters)"
				required=""
			/>
			{{! <label for="inputPassword">Password
				<span class="text-muted">Min. 8 characters</span></label> }}
		</div>

		<div class="form-floating">
			<input
				name="location"
				type="location"
				id="inputLocation"
				class="form-control"
				placeholder="Insert your country"
				value="{{location}}"
				required=""
				autofocus=""
			/>
			{{! <label for="inputLocation">Location</label> }}
		</div>

		<button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
		<p class="mt-2 mb-3 text-muted text-center">Â© 2021</p>
	</form>

</main>

