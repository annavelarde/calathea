<h1>Signup page</h1>

<form method="POST" action="/auth/signup">
	<br />
	<label>Name
		<input
			type="text"
			name="username"
			placeholder="Write your Name"
			value="{{username}}"
		/></label>

	<br />
	<br />
	<label>Email
		<input
			type="text"
			name="email"
			placeholder="Write your Email"
			value="{{email}}"
		/>
	</label>
	<br />
	<br />
	<label>Password (min 8 characters)
		<input
			type="password"
			name="password"
			placeholder="Write your Password"
		/>
	</label>
	<br />
	<br />
	<label>Location:
		<input
			type="text"
			name="location"
			placeholder="Your location"
			value="{{location}}"
		/>
	</label>

	<br />
	<br />

	<button type="submit">Sign up</button>
</form>

{{#if errorMessage}}
	<p style="color:red">{{errorMessage}}</p>
{{/if}}